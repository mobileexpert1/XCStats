<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_training_logs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.xcstats.views.Activites.TrainingLogsActivity">

    <RelativeLayout
        android:id="@+id/training_logs"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CB671C">

            <ImageView
                android:id="@+id/image_homes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/home_icon" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Training Logs"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:id="@+id/ivLeadboard"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Leaderboard"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/training_logs"
        android:background="@drawable/background_next">


        <ImageView
            android:id="@+id/backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_arrow" />


        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="18dp" />


        <ImageView
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/forword_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/workout_days"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/time_layout"
        android:background="#000"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="Days"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="RHR"
            android:textColor="#fff"
            android:textSize="16dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="Workout 1"
            android:textColor="#fff"
            android:textSize="16dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:text="Workout 2"
            android:textColor="#fff"
            android:textSize="16dp" />


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_days">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="432dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="7">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomline_txt"
                    android:gravity="center"
                    android:text="MON"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomline_txt"
                    android:gravity="center"
                    android:text="TUE"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomline_txt"
                    android:gravity="center"
                    android:text="WED"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomline_txt"
                    android:gravity="center"
                    android:text="THU"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomline_txt"
                    android:gravity="center"
                    android:text="FRI"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomline_txt"
                    android:gravity="center"
                    android:text="SAT"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomline_txt"
                    android:gravity="center"
                    android:text="SUN"
                    android:textColor="#fff"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="430dp"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                android:weightSum="7">


                <TextView
                    android:id="@+id/monTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add "
                    android:maxLength="3"
                    android:textColor="#4169e1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tueTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add "
                    android:maxLength="3"
                    android:textColor="#4169e1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/wedTv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add "
                    android:maxLength="3"
                    android:textColor="#4169e1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/thuTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="Add "
                    android:textColor="#4169e1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/friTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add "
                    android:maxLength="3"
                    android:textColor="#4169e1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/satTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add "
                    android:maxLength="3"
                    android:textColor="#4169e1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/sunTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add "
                    android:maxLength="3"
                    android:textColor="#4169e1"
                    android:textSize="15dp" />


            </LinearLayout>


            <com.xcstats.views.custom.ExpandedGridView
                android:id="@+id/gridview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:horizontalSpacing="1dp"
                android:numColumns="2"
                android:ellipsize="end"
                android:maxLines="1"
                android:verticalSpacing="1dp">

            </com.xcstats.views.custom.ExpandedGridView>


        </LinearLayout>


    </LinearLayout>

    </ScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/textbutton_shape">


        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#696969"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Summary"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.xcstats.views.custom.Textview_Simple
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="#CB671C"
                    android:text="Miles"/>

                <Button
                    android:id="@+id/buttonMiles"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:background="#CB671C"
                    android:textColor="@android:color/white"
                    android:text=""/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <com.xcstats.views.custom.Textview_Simple
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CB671C"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="Time"/>



                <Button
                    android:id="@+id/buttonTime"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"
                    android:background="#CB671C"
                    android:text=""/>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
