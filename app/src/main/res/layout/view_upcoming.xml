<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#CB671C"
        android:id="@+id/relative_close">


        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Upcoming Goals"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"/>





    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#fff"
        android:layout_marginRight="10dp"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relative_date"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_alignParentLeft="true"
                android:id="@+id/txt_date"
                android:textSize="18dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:id="@+id/date"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>


        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relative_meet"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meet"
                android:layout_alignParentLeft="true"
                android:id="@+id/txt_meet"
                android:textSize="18dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:id="@+id/meet"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>



        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relative_event"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:layout_alignParentLeft="true"
                android:id="@+id/txt_event"
                android:textSize="18dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:id="@+id/event"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>



        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relative_goal"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:layout_alignParentLeft="true"
                android:id="@+id/txt_goal"
                android:textSize="18dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:id="@+id/goal"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>



        </RelativeLayout>










        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relative_notes"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre_Notes"
                android:layout_alignParentLeft="true"
                android:id="@+id/txt_notes"
                android:textSize="18dp"/>



        </RelativeLayout>




</LinearLayout>


    </LinearLayout>