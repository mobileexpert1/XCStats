<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_current_pr_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xcstats.views.Activites.CurrentPrActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/plan_logs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#CB671C">


        <ImageView
            android:id="@+id/image_bckhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/top_back_icon"
            android:padding="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:inputType="textCapCharacters"
            android:text="Your Current PR's And SR's"
            android:textColor="#fff"
            android:textSize="20dp" />


    </androidx.appcompat.widget.Toolbar>





        <LinearLayout
            android:id="@+id/workout_days"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/plan_logs"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="10dp"
            android:background="#000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Event"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Personal Record"
                android:gravity="center"
                android:id="@+id/txt_reason"
                android:textColor="#fff"
                android:textSize="16dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1.0"
                android:text="Season Record"
                android:textColor="#fff"
                android:textSize="16dp" />
        </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pr_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/workout_days">


    </androidx.recyclerview.widget.RecyclerView>















    </RelativeLayout>





