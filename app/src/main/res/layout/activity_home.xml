<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context="com.xcstats.views.Activites.HomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                  <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:id="@+id/xc_logo"
                    android:src="@drawable/logo"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/xc_logo">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/coachesAnnouncementsRL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.xcstats.views.custom.Textview_Light
                                android:id="@+id/countTV"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/count_circle"
                                android:layout_alignParentRight="true"
                                android:textColor="#fff"
                                android:visibility="gone"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <com.xcstats.views.custom.Button_simple
                                android:id="@+id/coachAnnouncementBT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/selector_button"
                                android:text="Coach Announcements"
                                android:textColor="#fff"
                                android:textSize="15dp" />


                        </RelativeLayout>

        <com.xcstats.views.custom.Button_simple
            android:id="@+id/btn_trainning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRAINING LOGS/RHR"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>

        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLANNED ABSENCE"
            android:id="@+id/btn_plan"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>

        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL COACH"
            android:id="@+id/btn_emailcoach"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>

        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="T&amp;F Schedule &amp; GOALS"
            android:id="@+id/btn_track"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>

        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XC schedule &amp; GOALS"
            android:id="@+id/btn_cross"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>



                        <com.xcstats.views.custom.Button_simple
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Team Documents"
                            android:id="@+id/btn_teamDoc"
                            android:textSize="15dp"
                            android:textColor="#fff"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="25dip"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/selector_button"/>





                        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARENT LOGINS"
            android:textSize="15dp"
            android:id="@+id/btn_parentlogin"
            android:textColor="#fff"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>





        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHOTO"
            android:textSize="15dp"
            android:id="@+id/btn_photo"
            android:textColor="#fff"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>

        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT PROFILE"
            android:textSize="15dp"
            android:id="@+id/edit_profile"
            android:textColor="#fff"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"/>


        <com.xcstats.views.custom.Button_simple
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:id="@+id/btn_logout"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="10dip"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dip"
            android:background="@drawable/selector_button"/>





                    </LinearLayout>


            </ScrollView>
        </RelativeLayout>





</RelativeLayout>
