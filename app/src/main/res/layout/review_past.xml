<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:id="@+id/linear_days"
            android:weightSum="5">

            <com.xcstats.views.custom.Textview_Light
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="12/31"
                android:id="@+id/txt_date"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000">

            </View>


            <com.xcstats.views.custom.Textview_Light
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:singleLine="true"
                android:text="test"
                android:textColor="#000"
                android:id="@+id/txt_meet" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000">

            </View>




            <com.xcstats.views.custom.Textview_Light
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="Event"
                android:id="@+id/txt_event"
                android:textColor="#000" />



            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000">

            </View>







            <com.xcstats.views.custom.Textview_Light
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="Goal"
                android:id="@+id/txt_goal"
                android:textColor="#000" />




            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000">

            </View>



            <com.xcstats.views.custom.Textview_Light
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="Result"
                android:id="@+id/txt_result"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000">

            </View>






            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editparents"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:id="@+id/edit_track"
                />






        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linear_days"
            android:background="#d3d3d3">

        </View>













    </RelativeLayout>




</LinearLayout>