<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review_past_goal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xcstats.views.Activites.ReviewPastGoal">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/training_logs">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="#CB671C"
            android:layout_height="?attr/actionBarSize">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_bcckhome"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/top_back_icon" />



            <com.xcstats.views.custom.Textview_Simple
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="Review Past Goals And Results"
                android:textColor="#fff"
                android:textSize="20dp" />




        </androidx.appcompat.widget.Toolbar>



    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_below="@+id/training_logs"
        android:layout_height="40dp"
        android:id="@+id/linear_bar"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:weightSum="5">


        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Date"
            android:layout_weight="0.7"
            android:id="@+id/txt_name"
            android:textColor="#fff"
            android:gravity="center" />


        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Meet"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:gravity="center"/>


        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Event"
            android:textColor="#fff"
            android:layout_weight="1.2"
            android:gravity="center" />


        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal"
            android:textColor="#fff"
            android:layout_weight="0.7"
            android:gravity="center" />





        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Result"
            android:textColor="#fff"
            android:layout_weight="0.7" />



        <com.xcstats.views.custom.Textview_Simple
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Edit"
            android:textColor="#fff"
            android:layout_weight="0.7" />



    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_pastgoal"
        android:layout_below="@+id/linear_bar">



    </androidx.recyclerview.widget.RecyclerView>






</RelativeLayout>
