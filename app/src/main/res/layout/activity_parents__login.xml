<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parents__login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context="com.xcstats.views.Activites.ParentsLogin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/parents_bar"
        android:layout_below="@+id/relative_logo">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Name"
                android:layout_weight="1.2"
                android:gravity="center"
                android:id="@+id/txt_name"
                android:textColor="#fff"
              />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Email"
                android:textColor="#fff"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1.7"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Status*"
                android:gravity="center"
                android:textColor="#fff"

                android:layout_weight="0.9"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Edit"
                android:gravity="center"

                android:textColor="#fff"
                android:layout_weight="0.5"
                android:layout_gravity="center" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Del."
                android:gravity="center"
                android:textColor="#fff"
                android:layout_weight="0.7"
                android:layout_gravity="center" />


        </LinearLayout>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parent_recycle"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@+id/textviewST"
        android:layout_below="@+id/parents_bar"
        android:background="#fff">


    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/textviewST"
        android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.xcstats.views.custom.Textview_Simple
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Status"
        android:inputType="textCapCharacters"
        android:id="@+id/txt_status"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="16dp"/>


    <com.xcstats.views.custom.Textview_Simple
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A = Active"
        android:textSize="16dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:id="@+id/textView2"
        android:paddingRight="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




   </RelativeLayout>

                <com.xcstats.views.custom.Textview_Simple
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@android:color/white"
                    android:gravity="center_horizontal"
                    android:text="W = Waiting for Activation"/>




                <com.xcstats.views.custom.Textview_Simple
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingRight="40dp"
                    android:textColor="@android:color/white"
                    android:gravity="center_horizontal"
                    android:text="B = Email Bouncing"/>



            </LinearLayout>





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">




        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="#1Affffff"
            android:layout_height="?attr/actionBarSize">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/top_back_icon" />

        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="Parents"
            android:textColor="@android:color/white"
            android:textSize="20dp" />




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Image_add"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/add"/>





    </RelativeLayout>













